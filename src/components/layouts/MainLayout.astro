---
import Nav from "@components/nav/Nav.astro";
import Footer from "@components/Footer.astro";
import "@fontsource/poppins";
import "@styles/global.css";
import { SEO } from "astro-seo";
import UserButton from "@components/auth/UserButton.astro";
import SignedIn from "@components/auth/SignedIn.astro";
import SignedOut from "@components/auth/SignedOut.astro";
import SignInButton from "@components/auth/SignInButton.astro";

interface Props {
	title?: string | undefined;
	description?: string | undefined;
	image?: string | undefined;
}
const { title, description, image } = Astro.props;
const url = Astro.url.searchParams.get("url");
import melinaPortrait from "@assets/Melina-batalla.png";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta property="og:type" content="website" />
		<meta name="viewport" content="width=device-width" />
		<meta
			name="description"
			property="og:description"
			content={description}
		/>
		<meta property="og:locale" content="es_ES" />

		<meta
			property="og:image"
			content={"https://res.cloudinary.com/dozjn0kxw/image/upload/v1701555003/msv95a48pc0climvtpfl.png"}
		/>
		<SEO
			title={(title as string) || "Melina Battalla"}
			description={(description as string) || "Melina Battalla"}
			canonical={Astro.url.href}
			openGraph={{
				basic: {
					title: (title as string) || "Melina Battalla",
					image: "https://res.cloudinary.com/dozjn0kxw/image/upload/v1701555003/msv95a48pc0climvtpfl.png",
					type: "website",
				},

				image: {
					secureUrl:
						"https://res.cloudinary.com/dozjn0kxw/image/upload/v1701555003/msv95a48pc0climvtpfl.png",
					url: "https://res.cloudinary.com/dozjn0kxw/image/upload/v1701555003/msv95a48pc0climvtpfl.png",
					alt: "Melina Battalla",
					width: melinaPortrait.width,
					height: melinaPortrait.height,
				},
			}}
		/>
		<meta property="og:url" content="https://www.example.com/webpage/" />
		<meta name="description" content={description} />
		<meta name="robots" content="index, follow" />
		<meta name="twitter:site" content="summary_large_image" />

		<meta name="viewport" content="width=device-width" />

		<meta name="generator" content={Astro.generator} />

		<link rel="icon" type="image/svg+xml" href="/MBlogo.svg" />
		<meta name="title" property="og:title" content={title} />
		<title>{title}</title>
	</head>

	<body class="h-screen bg-blanco w-full">
		<div class="w-full ">
			<!-- <SignedIn classes="flex flex-row gap-4">
				<UserButton />
			</SignedIn>
			<SignedOut>
				<SignInButton />
			</SignedOut> -->
			<slot />
			<Footer />
		</div>
		<script src="https://unpkg.com/taos@1.0.5/dist/taos.js" defer></script>
		<script>
			import { initializeClerk } from "../../lib/clerk";
			initializeClerk();
		</script>
	</body>
</html>
