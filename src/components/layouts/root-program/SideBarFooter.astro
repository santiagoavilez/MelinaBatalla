        <SignedIn>
            <SignOutButton className=""> Cerrar Sesión </SignOutButton>
        </SignedIn>
    </div>

    <Separator className="bg-negro/20 my-2" />
    <span class="inline-flex gap-2 text-sm"> © 2024 Nazarena Batalla™ </span>
    <span class="block text-sm"> All Rights Reserved. &nbsp; </span>
</footer>
