---
import ButtonCTA from "@components/ui/buttonCTA.astro";
// import melinaLogo from "@assets/mblogo.png";
// import { Image } from "astro:assets";
import melinaPortrait from "@assets/root-program/melina-hero-image.png";
import melinaPortraitMd from "@assets/root-program/root-program-portrait-banner.png";

import { getImage, Image } from "astro:assets";

const optimizedBackgroundmd = await getImage({
  src: melinaPortraitMd,
  format: "webp",
});
---

<section
  class={`h-full  aspect-[9/16] md:aspect-video  rounded-t-xl  relative w-full rounded-b-xl xxl:rounded-xl  bg-cover bg-no-repeat text-white`}
>
  <Image
    alt={"Nazarena Batalla en un retrato de estudio."}
    src={melinaPortrait}
    width={600}
    height={1067}
    format="webp"
    loading="eager"
    class={"rounded-lg block rounded-t-xl min-[600px]:hidden mx-auto  "}
  />
  <Image
    alt={"Nazarena Batalla en un retrato de estudio."}
    src={melinaPortrait}
    width={800}
    height={1067}
    format="webp"
    loading="eager"
    class={"rounded-lg hidden  min-[600px]:block rounded-t-xl md:hidden mx-auto  "}
  />
  <Image
    alt={"Nazarena Batalla en un retrato de estudio."}
    src={optimizedBackgroundmd.src}
    width={1024}
    height={634}
    format="webp"
    loading="eager"
    class={" md:block rounded-2xl  hidden mx-auto  top-0 left-0 right-0 "}
  />
  <div
    class="h-full min-h-[569px] rounded-2xl absolute p-6 right-0 top-0 flex flex-col justify-center text-white bg-black/80 w-full gap-4 z-10"
  >
    <div
      class="text-left md:text-center flex flex-col gap-2 md:gap-4 pb-4 md:pt-0"
    >
      <span class="text-xl leading-4"> Programa para coachs </span>
      <h1
        class="text-7xl text-left md:text-center md:text-6xl leading-[4rem] tracking-tight font-bold"
      >
        Root Program
      </h1>
      <span class="text-xl leading-5 pt-2 tracking-tight">
        Como usar Instagram conscientemente para vender tus servicios.
      </span>
    </div>
    <ButtonCTA
      className="h-16  px-12 w-full md:w-fit justify-self-center self-center hover:bg-primary hover:scale-105 transition-transform text-xl md:text-2xl   shadow-lg  "
    >
      Ver Programa
    </ButtonCTA>
  </div>
</section>
