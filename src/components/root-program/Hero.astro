---
import ButtonCTA from "@components/ui/buttonCTA.astro";
import melinaLogo from "@assets/mblogo.png";
import { Image } from "astro:assets";
---

<section class="h-full p-6 xs:p-10 w-full rounded-xl -mt-2 bg-marmol">
    <div class="px-0 flex flex-col items-center gap-4 text-negro">
        <div class="flex flex-col gap-4">
            <Image
                class="mx-auto pb-20 md:pb-4 md:hidden"
                alt={"melina batalla logo"}
                src={melinaLogo}
                height={24}
                format="webp"
            />

            <div class="text-left md:text-center flex flex-col gap-2 md:gap-4 pt-4">
                <span class="md:text-xl text-lg"> Atención emprendedoras holísticas: </span>
                <h1
                    class="text-6xl text-left md:text-center md:text-6xl leading-[3rem] tracking-tight text-negro font-bold"
                >
                    Vende sin sacrificar tu paz.
                </h1>
                <span class="text-2xl md:text-2xl leading-5 pt-2 tracking-tight">
                    Como usar redes sociales para vender tus servicios sin
                    métodos complejos:
                </span>
            </div>

            <div class="w-full pt-14 md:pt-4 -mb-28 md:-mb-32 relative grow h-full">
                <iframe
                    allowfullscreen
                    class="w-full aspect-video  rounded-lg "
                    src={"https://www.youtube.com/embed/H7QzEvpmDek"}
                >
                    {" "}
                </iframe>
            </div>
        </div>
    </div>
</section>
<div class="pt-32 md:pt-32 pb-16 w-full flex justify-center">
    <ButtonCTA className="h-16 px-12 text-xl md:text-2xl shadow-2xl shadow-gray-400 mx-8 "> Obtener Ahora! </ButtonCTA>
</div>
