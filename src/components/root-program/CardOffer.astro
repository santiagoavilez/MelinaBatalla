---
import { Card, CardContent, CardHeader, CardTitle } from "@components/ui/card";
const { title, description } = Astro.props;
---

<Card className="bg-marmol">
    <CardHeader>
        <CardTitle className=" text-left">
            <span class="text-green-600">+</span>
            {title}
        </CardTitle>
    </CardHeader>
    <CardContent>
        {description}
    </CardContent>
</Card>
