---
import CourseClass from "@components/descubriTuEscencia/CourseClass.astro";
import CoursesHero from "@components/descubriTuEscencia/CoursesHero.astro";
import RootMentorySection from "@components/descubriTuEscencia/RootMentorySection.astro";
import MainLayout from "@components/layouts/MainLayout.astro";

import SnapCarousel from "@components/descubriTuEscencia/SnapCarousel.tsx";

import Nav from "@components/nav/Nav.astro";
import { Button } from "@components/ui/button";

import review1 from "@assets/descubri-tu-escencia/1.png";
import review2 from "@assets/descubri-tu-escencia/2.png";
import review3 from "@assets/descubri-tu-escencia/3.png";
import review4 from "@assets/descubri-tu-escencia/4.png";
import review5 from "@assets/descubri-tu-escencia/5.png";
---

<MainLayout
    description={"sitio de melina batalla, comunicadora visual"}
    title={"Melina Batalla"}
>
    <main>
        <Nav>
            <a href="https://api.whatsapp.com/send?phone=5493774400625"
                ><Button size={"sm"} className="font-semibold h-6">
                    Contactar
                </Button></a
            >
        </Nav>
        <CoursesHero />
        <CourseClass
            title="Clase 1 "
            description="Al ver esta clase vas a lograr conectar con tu autenticidad y definir tu propósito. Esto te dará claridad al momento de definir tu plan de acción"
            videoUrl={"https://www.youtube.com/embed/H7QzEvpmDek"}
        />
        <CourseClass
            title="Clase 2 "
            description="Al ver esta clase vas a lograr conseguir un equilibrio esencia-negocio.Esto te permitirá construir tu negocio desde el disfrute."
            videoUrl={"https://www.youtube.com/embed/tI_QR7N0ENE"}
        />
        <CourseClass
            title="Clase 3 "
            description="Al ver esta clase vas a lograr diferenciar tu marca a partir de tu esencia. Destacar sin pisar a nadie, sin imitar, siendo tú misma."
            videoUrl={"https://www.youtube.com/embed/H7QzEvpmDek"}
        />

        <RootMentorySection />

        <CourseClass
            title="Clase 4 "
            description="Al ver esta clase lograrás aprender cómo comunicar tu mensaje para que llegue y conecte profundamente con las personas que buscas ayudar."
            videoUrl={"https://www.youtube.com/embed/M-7b0w9lgt8"}
        />

        <CourseClass
            colorSection="negro"
            title="BONUS ÚLTIMA CLASE"
            description="Toda esta información no es nada si no actúas. Quiero que ayudes a miles de personas, que logres vivir de lo que amas, que transmitas tu mensaje sin estrés, que trabajes con las personas que están dispuestas a hacer un cambio, por eso te invito a que veas el último video:"
            videoUrl="https://www.youtube.com/embed/VJaarTb5-_U"
        >
            <a
                class="w-full max-w-lg mt-4"
                href="https://api.whatsapp.com/send?phone=5493774400625"
                ><Button className="w-full">Quiero Accionar!</Button>
            </a>
        </CourseClass>

        <!-- <CarouselScroll  client:only="react" />
        <FlowBiteCarousel client:only="react" /> -->
        <section
            class={`bg-negro text-blanco
     rounded-md`}
        >
            <div class="container px-0 flex flex-col items-center gap-5">
                <div class="h-auto text-3xl mt-5 mx-auto">
                    <h2 class="whitespace-break-spaces">
                        PALABRAS DE AMOR SOBRE MIS ACOMPAÑAMIENTOS
                    </h2>
                </div>
                <SnapCarousel
                    images={[review1, review2, review3, review4, review5]}
                    client:only="react"
                />
            </div>
        </section>
    </main>
</MainLayout>
